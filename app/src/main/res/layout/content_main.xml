<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ism.ritik.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="fill_parent"
    android:fillViewport="false"
    android:background="#FF1744">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/title_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_nanodegree_apps"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn1"
        android:text="@string/app_1"
        android:layout_below="@id/title_app"
        style="@style/CustomButtonStyle"
        />

    <Button
        android:id="@+id/btn2"
        android:text="@string/app_2"
        android:layout_below="@id/btn1"
        style="@style/CustomButtonStyle"
        />

    <Button
        android:id="@+id/btn3"
        android:text="@string/app_3"
        android:layout_below="@id/btn2"
        style="@style/CustomButtonStyle"
        />

    <Button
        android:id="@+id/btn4"
        android:text="@string/app_4"
        android:layout_below="@id/btn3"
        style="@style/CustomButtonStyle"
        />

    <Button
        android:id="@+id/btn5"
        android:text="@string/app_5"
        android:layout_below="@id/btn4"
        style="@style/CustomButtonStyle"
        />

    <Button
        android:id="@+id/btn6"
        android:text="@string/app_6"
        android:layout_below="@id/btn5"
        style="@style/CustomButtonStyle"
        />
</RelativeLayout>
</ScrollView>